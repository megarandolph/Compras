@model IEnumerable<Compras.Models.Unidades_de_medidas>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @if ((bool)item.Estado)
            {
                <text>Activo</text>
            }
            else
            {
                <text>Inactivo</text>
            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UnidadMedidaId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.UnidadMedidaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UnidadMedidaId })
        </td>
    </tr>
}

</table>
