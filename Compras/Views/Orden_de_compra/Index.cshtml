@model IEnumerable<Compras.Models.Orden_de_compra>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
           Fecha Orden
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>
        <th>
            Articulos o Descripción
        </th>
        <th>
            Unidades de medidas o Descripcion
        </th>
        <th>
            Nombre de Usuarios
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_orden)
        </td>
        <td>
            @if ((bool)item.Estado)
            {
                <text>Activo</text>
            }
            else
            {
                <text>Inactivo</text>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Costo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Articulos.Descripción)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unidades_de_medidas.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usuarios.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Numero_de_orden }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Numero_de_orden }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Numero_de_orden })
        </td>
    </tr>
}

</table>
